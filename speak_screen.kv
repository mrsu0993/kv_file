#: import Colors settings.colors.Colors
#: import Texts settings.texts.Texts

<Speak_Screen>:
    name: "speak_screen"
    md_bg_color: Colors.den
    orientation: 'vertical'
    padding: '5dp'
    spacing: '10dp'

    MDLabel:
        id: total_word_count_label
        text: Texts.text1
        halign: "center"
        pos_hint: {"center_y": .92}
        font_size: sp(30)
        size_hint_y: None
        theme_text_color: "Custom"
        text_color: Colors.black

    MDLabel:
        id: word_count_label
        text: Texts.text2
        halign: "center"
        pos_hint: {"center_y":.819}
        font_size: sp(26)
        size_hint_y: None
        theme_text_color: "Custom"
        text_color: Colors.black

    MDLabel:
        id: current_file_label
        text: Texts.text3
        halign: "center"
        pos_hint: {"center_y":.66}
        font_size: sp(120)
        size_hint_y: None
        theme_text_color: "Custom"
        text_color: Colors.vang1
        elevation: 2

    MDBoxLayout:
        adaptive_height: True
        height: dp(12)
        padding: dp(20), 0
        pos_hint: {"center_y": 0.49}
        MDSlider:
            id: progress_slider
            min: 0
            max: 1
            value: 0
            hint: True
            hint_radius: [6, 0, 6, 0]
            hint_bg_color: Colors.do
            hint_text_color: Colors.white
            thumb_color_active: Colors.vang
            thumb_color_inactive: Colors.vang1
            track_color_active: Colors.hong
            on_touch_down: root.slider_touch_down(*args)
            on_touch_move: root.slider_touch_move(*args)
            on_touch_up: root.slider_touch_up(*args)

    MDIconButton:
        id: play_button
        icon: 'play'
        on_release: root.play_pause()
        md_bg_color: Colors.vang1
        pos_hint: {"center_x": 0.5, "center_y": 0.4}

    MDRectangleFlatIconButton:
        id: name_audio
        text: "Chọn file nói ở đây"
        size_hint_x: None
        width: dp(100)
        pos_hint: {'center_x': .5, 'center_y': .3}
        on_release: root.show_confirmation_dialog()
        theme_text_color: "Custom"

    MDLabel:
        id: index_word
        text: Texts.text4
        font_size: '16sp'
        halign: "center"
        font_size: '26sp'
        pos_hint: {"center_x":0.5, "center_y":0.2}
        theme_text_color: "Custom"
        text_color: Colors.black

    MDBoxLayout:
        adaptive_height: True
        height: dp(30)
        orientation: "horizontal"
        pos_hint: {"center_x":0.5, "center_y":0.15}
        padding: dp(120), 0, dp(120), 0

        MDTextField:
            id: current_index_text
            hint_text: Texts.text5
            pos_hint: {"center_x":0.5, "center_y":0.13}
            size_hint_x: .8

        MDRaisedButton:
            text: "Copy Link"
            size_hint_x: .2
            on_release: root.copy_link()

    MDLabel:
        id: copyright_activatived
        text: Texts.text6
        markup: True
        halign: "center"
        pos_hint: {"center_y":0.05}